@*@model IEnumerable<Apphr.Application.AjustesInventario.DTOs.AjusteInventarioDTOBase>*@
@model PagedList.IPagedList<Apphr.Application.AjustesInventario.DTOs.AjusteInventarioDTOBase>
@using PagedList.Mvc
<div class="table-responsive">
    <table id="myTable" class="table table-striped table-bordered display responsive nowrap" width="100%">
        <thead class="table-dark">
            <tr>
                <th style="width:75px;">Acciones</th>
                <th>Ajuste#</th>
                <th>Fecha</th>
                <th>Depto/Servicio</th>
                
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <!-- Acciones -->
                        <td class="text-center">
                            <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.AjusteInventarioId })"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        </td>
                        <!-- Acciones -->
                        <td>
                            @item.AjusteInventarioId
                        </td>
                        <td>
                            @item.Fecha.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @*@item.Departamento.Descripcion*@
                        </td>
                        
                    </tr>
                }
            }
            else
            {
                <!--Sin registros-->
                <tr>
                    <td class="text-center" colspan="5">@Apphr.Resources.Strings.NoRegister</td>
                </tr>
                <!--Sin registros-->
            }
        </tbody>
    </table>
</div>
<!-- Table Paged Navigation-->
<div class="row">
    <div class="col-12 text-center">@Html.PagedListPager(Model, page => page.ToString(), (PagedListRenderOptions)ViewBag.PLROpions)</div>
    <div class="text-center">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</div>
</div>
<!-- Table Paged Navigation-->