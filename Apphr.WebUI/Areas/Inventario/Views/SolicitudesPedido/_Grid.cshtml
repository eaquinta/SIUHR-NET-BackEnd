@model IEnumerable<Apphr.Application.SolicitudesPedido.DTOs.SolicitudPedidoDetalleDTOBase>  
<table class="table table-striped table-bordered display responsive nowrap mb-0" width="100%">
    <thead class="table-dark">
        <tr>
            <th style="width:75px;">Acciones</th>
            <th>Material</th>
            <th class="text-end">Cantidad</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Valor</th>
        </tr>
    </thead>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-primary" type="button" id="ddBtn" data-bs-toggle="dropdown" aria-expanded="false">
                            @*<i class="fas fa-bars"></i>*@
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="ddBtn">
                            <li><a class="dropdown-item" data-model-id="@item.SolicitudPedidoDetalleId" onclick="child.rowEdit(this);"><i class="far fa-edit"></i> Editar</a></li>
                            <li><a class="dropdown-item" data-model-id="@item.SolicitudPedidoDetalleId" onclick="child.rowDelete(this);"><i class="fas fa-trash-alt"></i> Eliminar</a></li>
                            @*<li><a class="dropdown-item" href="@Url.Action("Egreso", new { id = item.PacienteEventoId })"><i class="fas fa-walking"></i> Egreso</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Diagnostico", new { id = item.PacienteEventoId })"><i class="fas fa-stethoscope" style="width:1rem;"></i> Diagnóstico</a></li>*@
                        </ul>
                    </div>

                    @*<button role="button" class="btn btn-info" data-model-id="@item.SolicitudPedidoDetalleId" onclick="rowDeleteConfirm(this);"><i class="fas fa-trash-alt"></i></button>
        <button role="button" class="btn btn-info" data-model-id="@item.SolicitudPedidoDetalleId" onclick="rowEdit(this);"><i class="far fa-edit"></i></button>*@
                </td>
                <td>[@item.Material.Codigo] @item.Material.Descripcion</td>
                <td>@string.Format("{0:N2}", item.Cantidad)</td>
                <td>@string.Format("{0:N2}", item.Precio)</td>
                <td>@string.Format("{0:N2}", item.Valor)</td>
            </tr>
        }

    }
    else
    {
        <!--Sin registros-->
        <tr>
            <td class="text-center" colspan="4">@Apphr.Resources.Strings.NoRegister</td>
        </tr>
        <!--Sin registros-->
    }

</table>