@model Apphr.Application.SolicitudesPedido.DTOs.SolicitudPedidoDTODetails
<div class="row">
    <div class="col-md-6">@Html.DisplayFor(x => x.SolicitudPedidoId, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Correlativo, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Fecha, "DateD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Tipo, "StringD")</div>
    <div class="col-md-4">@Html.DisplayFor(x => x.Departamento.Codigo, "StringD", new { @label = "Códgio Departamento" })</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Departamento.Descripcion, "StringD", new { @label = "Departamento Nombre" })</div>
    <div class="col-md-4">@Html.DisplayFor(x => x.Seccion.Codigo, "StringD", new { @label = "Código Sección" })</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Seccion.Descripcion, "StringD", new { @label = "Sección Nombre" })</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Elaboro, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Solicito, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.JefeDepartamento, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Gerente, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Director, "StringD")</div>
    <div class="col-md-6">@Html.DisplayFor(x => x.Observaciones, "StringD")</div>
</div>
<!-- Tabla -->
<div class="table-responsive">
    <table id="myTable" class="table table-striped table-bordered display responsive nowrap" width="100%">
        <thead class="table-dark">
            <tr>
                @*<th style="width:75px;">Acciones</th>*@
                <th>Material</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Detalle != null && Model.Detalle.Any())
            {
                foreach (var item in Model.Detalle)
                {
            <tr>
                <!-- Acciones -->
                @*<td class="text-center">
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.BodegaId })"><i class="fa fa-eye" aria-hidden="true"></i></a>
                </td>*@
                <!-- Acciones -->
                <td>
                    [@item.Material.Codigo] @item.Material.Descripcion
                </td>
                <td>
                    @item.Cantidad
                </td>
                <td>
                    @item.Precio
                </td>
            </tr>
                }
            }
            else
            {
                <!--Sin registros-->
                <tr>
                    <td class="text-center" colspan="3">@Apphr.Resources.Strings.NoRegister</td>
                </tr>
                <!--Sin registros-->
            }
        </tbody>
    </table>
</div>