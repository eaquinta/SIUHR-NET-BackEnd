@model Apphr.Application.OrdenesCompra.DTOs.OrdenCompraDTODetailsDBF
@{
    ViewBag.Title = "Detalles";
    ViewBag.Entidad = "Orden Compra SIAHR";
    ViewBag.Icon = "<i class=\"fas fa-eye\"></i>";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
@Html.Partial("_PartialAdvSiahr")
<div class="container-lg">
    <!--BreadCrum-->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <a class="" href="@Url.Action("Index","Home", new { Area ="Inventario" })" style="text-decoration:none">
                    <i class="fa fa-home" title="Inicio"></i>
                    <span>Inicio</span>
                </a>
            </li>
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <a class="" href="@Url.Action("IndexDBF")" style="text-decoration:none">
                    <span>Índice</span>
                </a>
            </li>
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <span>Ver</span>
            </li>
        </ol>
    </nav>
    <!--BreadCrum-->
    <!-- Form Title -->
    <h4 class="mb-0">
        @ViewBag.Title @ViewBag.Entidad @Html.Raw(ViewBag.Icon)
        @*<a id="btnPrint" class="btn btn-warning float-end" href="@Url.Action("Print", new { id = Model.Solicitud })">
                Imprimir <i class="fas fa-print"></i>
            </a>*@
    </h4>
    <hr />
    <!-- Form Title -->
    <!-- Form -->
    <div class="row">
        <div class="col-md-6">@Html.DisplayFor(x => x.Orden, "StringD")</div>
        <div class="col-md-6">@Html.DisplayFor(x => x.Fecha, "DateD")</div>
        <div class="col-md-4">@Html.DisplayFor(x => x.Nit, "StringD")</div>
        <div class="col-md-8">@Html.DisplayFor(x => x.ProveedorNombre, "StringD")</div>
    </div>
    <!-- Form -->
    <!-- Tabla -->
    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered display responsive nowrap" width="100%">
            <thead class="table-dark">
                <tr>
                    @*<th>Acciones</th>*@
                    <th>Renglón</th>
                    <th>Material</th>
                    <th>Nombre</th>
                    <th>Unidad</th>
                    <th class="text-end">Cantidad</th>
                    <th class="text-end">Precio</th>
                    <th class="text-end">Valor</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Detalle.Any())
                {
                    foreach (var item in Model.Detalle)
                    {
                        <tr>
                            <!-- Acciones -->
                            <!--<td>
                                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.Orden })"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            </td>-->
                            <!-- Acciones -->
                            <td>
                                @item.Renglon
                            </td>
                            <td>
                                @item.MaterialCodigo
                            </td>
                            <td>
                                @item.MaterialNombre
                            </td>
                            <td>
                                @item.UnidadMedida
                            </td>
                            <td class="text-end">@string.Format("{0:N2}", item.Cantidad)</td>
                            <td class="text-end">@string.Format("{0:N2}", item.Precio)</td>
                            <td class="text-end">@string.Format("{0:N2}", item.Valor)</td>

                        </tr>
                    }
                }
                else
                {
                    <!--Sin registros-->
                    <tr>
                        <td class="text-center" colspan="6">@Apphr.Resources.Strings.NoRegister</td>
                    </tr>
                    <!--Sin registros-->
                }
            </tbody>
        </table>
        <!-- Tabla -->
        <!-- Botones Formulario -->
        <div class="col-12 mt-1">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Regresar", "IndexDBF", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>
        <!-- Botones Formulario -->
    </div>
</div>
