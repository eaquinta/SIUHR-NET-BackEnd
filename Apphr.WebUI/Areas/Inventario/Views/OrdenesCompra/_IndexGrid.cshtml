@model PagedList.IPagedList<Apphr.WebUI.Models.Entities.OrdenCompra>
@using PagedList.Mvc
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr class="table-dark">
            <th style="width:65px;">Acción</th>
            <th>Orden</th>
            <th>Fecha</th>
            <th>Nit</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><a href="@Url.Action("Details",new { Area = "Inventario", id = item.OrdenCompraId })"><i class="far fa-eye"></i></a> </td>
                   
                    <td>@Html.DisplayFor(modelItem => item.OrdenCompraId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Proveedor.Nit)</td>
                </tr>
            }
        }
        else
        {
            <!--Sin registros-->
            <tr>
                <td class="text-center" colspan="4">@Apphr.Resources.Strings.NoRegister</td>
            </tr>
            <!--Sin registros-->
        }

    </table>
</div>
<!-- Table Paged Navigation-->
<div class="row">
    <div class="col-12 text-center">@Html.PagedListPager(Model, page => page.ToString(), (PagedListRenderOptions)ViewBag.PLROpions)</div>
    <div class="text-center">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</div>
</div>
<!-- Table Paged Navigation-->