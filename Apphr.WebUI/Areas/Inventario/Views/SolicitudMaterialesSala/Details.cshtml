@model Apphr.Application.SolicitudMaterialesSala.DTOs.SolicitudMaterialSalaDTODetails
@{
    ViewBag.Title = "Ver";
    ViewBag.Entidad = "Solicitud Materiales Sala Detalle";
    ViewBag.Icon = "<i class=\"far fa-eye\"></i>";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
    var IdKey = new { id = Model.SolicitudMaterialSalaId };
}
<div class="container-lg">
    <!--BreadCrum-->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <a class="" href="@Url.Action("Index","Home", new { Area = "Inventario" })" style="text-decoration:none">
                    <i class="fa fa-home" title="Inicio"></i>
                    <span>Inicio</span>
                </a>
            </li>
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <a class="" href="@Url.Action("Index")" style="text-decoration:none">
                    <span>Indice</span>
                </a>
            </li>
            <li class="breadcrumb-item aos-init" data-aos="fade-left">
                <span>Ver</span>
            </li>
        </ol>
    </nav>
    <!--BreadCrum-->
    <!-- Form Title -->
    <h4 class="mb-0">
        @ViewBag.Title @ViewBag.Entidad @Html.Raw(ViewBag.Icon)
        <a class="btn btn-warning float-end ms-2" href="@Url.Action("CEdit", IdKey)"><i class="fa fa-pen-square"></i>&nbsp;Editar</a>
        <a class="btn btn-outline-dark float-end ms-2" href="@Url.Action("Index")">Regresar</a>
        <a id="btnPrint" class="btn btn-outline-dark float-end" href="@Url.Action("Print", IdKey)"><i class="fas fa-print"></i>&nbsp;Imprimir</a>
    </h4>
    <hr />
    <!-- Form Title -->
    <!-- Form -->
    <div class="card border border-dark">
        <div class="card-header background-inventory">
            Datos Generales
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">@Html.DisplayFor(x => x.SolicitudMaterialSalaId, "StringD")</div>
                <div class="col-md-3">@Html.DisplayFor(x => x.HojaControlSala, "StringD")</div>
                <div class="col-md-3">@Html.DisplayFor(x => x.Fecha, "DateD")</div>
                <div class="col-md-3">@Html.DisplayFor(x => x.DespachoInventarioId, "StringD")</div>
                <div class="col-md-4">@Html.DisplayFor(x => x.PacienteRM, "StringD")</div>
                <div class="col-md-8">@Html.DisplayFor(x => x.PacienteNombreCompleto, "StringD")</div>
                <div class="col-md-4">@Html.DisplayFor(x => x.Servicio, "StringD")</div>
                <div class="col-md-4">@Html.DisplayFor(x => x.Cama, "Int32D")</div>
                <div class="col-md-4">@Html.DisplayFor(x => x.FechaOperacion, "DateD")</div>
                <div class="col-12">@Html.DisplayFor(x => x.Cirujano, "StringD")</div>
                <div class="col-12">@Html.DisplayFor(x => x.AuxiliarEnfermeriaInstrumentista, "StringD")</div>
                <div class="col-12">@Html.DisplayFor(x => x.AuxiliarEnfermeriaCirculante, "StringD")</div>
                <div class="col-12">@Html.DisplayFor(x => x.Observacion, "StringD")</div>
            </div>
            <!-- Form -->
            <h4>Detalle de Materiales</h4>
            <!-- Detalle -->
            <table class="table table-striped table-bordered display responsive nowrap mb-0" width="100%">
                <thead class="table-dark">
                    <tr>
                        <th>Material</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                @if (Model.Detalle != null && Model.Detalle.Any())
                {
                    foreach (var item in Model.Detalle)
                    {
                        <tr>
                            <td>[@item.Material.Codigo] @item.Material.Descripcion</td>
                            <td>@item.Cantidad</td>
                        </tr>
                    }

                }
                else
                {
                    <!--Sin registros-->
                    <tr>
                        <td class="text-center" colspan="4">@Apphr.Resources.Strings.NoRegister</td>
                    </tr>
                    <!--Sin registros-->
                }

            </table>
            <!-- Detalle -->
        </div>
    </div>

    <!-- Botones Formulario -->
    <div class="col-12 mt-1">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    </div>
    <!-- Botones Formulario -->
</div>