@model PagedList.IPagedList<Apphr.Application.SolicitudMaterialesSala.DTOs.SolicitudMaterialSalaDTOIndex>
@using PagedList.Mvc
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr class="table-dark">
            <th style="width:65px;">Acción</th>
            <th>Hoja de Control</th>
            <th>Fecha</th>
            <th>Registro Médico</th>
            <th>Nombre Paciente</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><a href="@Url.Action("Details",new { Area = "Inventario", id = item.SolicitudMaterialSalaId })"><i class="far fa-eye"></i></a> </td>
                    <td>@Html.DisplayFor(modelItem => item.HojaControlSala)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.PacienteRM)</td>
                    <td>@Html.DisplayFor(modelItem => item.PacienteNombreCompleto)</td>
                </tr>
            }
        }
        else
        {
            <!--Sin registros-->
            <tr>
                <td class="text-center" colspan="5">@Apphr.Resources.Strings.NoRegister</td>
            </tr>
            <!--Sin registros-->
        }

    </table>
</div>
<!-- Table Paged Navigation-->
<div class="row">
    <div class="col-12 text-center">@Html.PagedListPager(Model, page => page.ToString(), (PagedListRenderOptions)ViewBag.PLROpions)</div>
    <div class="text-center">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</div>
</div>
<!-- Table Paged Navigation-->