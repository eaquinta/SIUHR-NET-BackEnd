@using Newtonsoft.Json
@{
    ViewBag.Title = "Control Abastecimiento";
    ViewBag.Entidad = "";
    ViewBag.Icon = "<i class=\"far fa-list-alt\"></i>";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<style>
    .table-responsive {
