@model PagedList.IPagedList<Apphr.Application.ExistenciasBodega.DTOs.ExistenciaBodegaDTOIndex>
@using PagedList.Mvc
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr class="table-dark">
            <th>Bodega</th>
            <th>Material</th>            
            <th class="text-end">Cantidad</th>
            <th class="text-end">Valor</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BodegaNombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaterialNombre)</td>                    
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                </tr>
            }
        }
        else
        {
            <!--Sin registros-->
            <tr>
                <td class="text-center" colspan="4">@Apphr.Resources.Strings.NoRegister</td>
            </tr>
            <!--Sin registros-->
        }

    </table>
</div>
<!-- Table Paged Navigation-->
<div class="row">
    <div class="col-12 text-center">@Html.PagedListPager(Model, page => page.ToString(), (PagedListRenderOptions)ViewBag.PLROpions)</div>
    <div class="text-center">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</div>
</div>
<!-- Table Paged Navigation-->