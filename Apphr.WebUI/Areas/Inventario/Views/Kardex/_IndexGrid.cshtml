@model Apphr.Application.Kardex.DTOs.KardexDTOKardexMaterial
@*@model PagedList.IPagedList<Apphr.Application.Kardex.DTOs.KardexDTOBase>*@
@*@using PagedList.Mvc*@
<style>

</style>
<div>

</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr class="table-dark">
            <th>Tipo</th>
            <th>Documento</th>
            <th>Correlativo</th>
            <th>Fecha</th>
            <th style="text-align:end;">Cantidad</th>
            <th style="text-align:end;">Valor</th>
            <th style="text-align:end;">Cantidad Acumulado</th>
            <th style="text-align:end;">Valor Acumulado</th>
            <th style="text-align:end;">CostoUnitario</th>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td style="text-align:end;" colspan="2"><b>Saldo Anterior</b></td>
            <td style="text-align:end;">@Model.SaldoAnterior.Cantidad.ToString("0.00")</td>
            <td style="text-align:end;">@Model.SaldoAnterior.Valor.ToString("0.00")</td>
            <td style="text-align:end;">@Model.SaldoAnterior.CostoUnitario.ToString("0.00")</td>
        </tr>

        @foreach (var item in Model.Detalle)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TipoDocumento)</td>
                <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                <td>@Html.DisplayFor(modelItem => item.Line)</td>
                <td>
                    @item.Fecha.ToString("d")
                </td>
                <td style="text-align:end;">
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td style="text-align:end;">
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td style="text-align:end;">
                    @Html.DisplayFor(modelItem => item.CantidadAcumulado)
                </td>
                <td style="text-align:end;">
                    @Html.DisplayFor(modelItem => item.ValorAcumulado)
                </td>
                <td style="text-align:end;">
                    @Html.DisplayFor(modelItem => item.CostoUnitario)
                </td>
            </tr>
        }

        <tr>
            <td colspan="4"></td>
            <td style="text-align:end;" colspan="2"><b>Saldo Actual</b></td>
            <td style="text-align:end;">@Model.SaldoActual.Cantidad</td>
            <td style="text-align:end;">@Model.SaldoActual.Valor</td>
            <td style="text-align:end;">@Model.SaldoActual.CostoUnitario.ToString("0.00")</td>
        </tr>
        <tr>
            <td>Tipo</td>
            <td>Documentos</td>
            <td>Cantidad</td>
            <td>Valor</td>
        </tr>
        @foreach(var item in Model.Resumen) 
        {
            <tr>
                <td>@item.TipoMovimiento</td>
                <td>@item.CantidadDocumentos</td>
                <td>@string.Format("{0:N2}", item.Cantidad)</td>
                <td>@string.Format("{0:N2}", item.Valor)</td>
            </tr>
        }
    </table>
</div>
