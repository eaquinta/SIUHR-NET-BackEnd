@model IEnumerable<Apphr.Domain.Entities.AppRole>

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<div class="container-lg">
    <!-- Encablezado -->
    <h4 class="my-3">
        Roles
        <i class="fa fa-tags"></i>
        <a class="btn btn-success float-end" href="@Url.Action("Create")">
            Adicionar <i class="fa fa-plus"></i>
        </a>
    </h4>
    <div class="clearfix"></div>
    <!-- Encablezado -->
    <table class="table">
        <tr class="table-dark">
            <th style="width:80px;">Acciones</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Descripción</th>            
        </tr>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.Id })"><i class="fa fa-eye" aria-hidden="true"></i></a>
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
            </tr>
            }
        }
        else 
        {
            <tr>
                <td class="text-center" colspan="3">
                    Sin registros para mostrar.
                </td>
            </tr>
        }

    </table>
</div>
