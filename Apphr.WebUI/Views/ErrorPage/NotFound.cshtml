
@{
    ViewBag.Title = "NotFound";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                    404 Not Found
                </h2>
                <div class="error-details">
                    Sorry, an error has occured, Requested page not found!
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("Index","Home", new { Area = "" })" class="btn btn-primary btn-lg">
                        <i class="fas fa-home"></i>

                        Ir a pagina inicial
                    </a><a href="http://www.jquery2dotnet.com" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>

