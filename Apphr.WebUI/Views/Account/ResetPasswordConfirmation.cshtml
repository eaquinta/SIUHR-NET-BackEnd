@{
    ViewBag.Title = "Confirmación de restablecimiento de contraseña";
}

<style>
    body {
        background: url('../Content/imgs/Login-bg2.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>

<div class="container-fluid">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-xl-4">
            <div class="card border-dark mt-3">
                <div class="card-header text-white bg-dark py-2 text-center"><h4>@ViewBag.Title</h4></div>
                <div class="card-body">
                    <div>
                        <p>
                            Se restableció la contraseña. @Html.ActionLink("Haga clic aquí para iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                        </p>
                        <a class="btn btn-primary" href="@Url.Action("Login", "Account")">Regresar al inicio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

