@model bool
   
<div class="form-check form-switch">
    @Html.CheckBoxFor(x => x, new { @class = "form-check-input", disabled = "disabled" })
    @if (ViewData["label"] != null)
    {
        @Html.LabelForModel((string)ViewData["label"], new { @class = "form-check-label", style = "font-weight:bold;" })
    }
    else
    {
        @Html.LabelForModel(new { @class = "form-check-label", style = "font-weight:bold;" })
    }
</div>
