@{
    var _siteName = System.Configuration.ConfigurationManager.AppSettings["SiteName"].ToString();
}
<!DOCTYPE html>
<html lang="es-gt" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - @_siteName</title>
    <!--Icon -->
    <link rel="icon" href="~/Content/imgs/favicon-hr.png" sizes="32x32">
    <link rel="icon" href="~/Content/imgs/favicon-hr.png" sizes="192x192">
    <link rel="apple-touch-icon" href="~/Content/imgs/favicon-hr.png">
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap-5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/Content/toastr-2.1.3/toastr.min.css" rel="stylesheet" />
    <!-- Aos -->
    <link href="~/Content/aos-2.3.1/aos.css" rel="stylesheet" />
    <!-- menukit css and js  -->
    <link href="~/Content/menukit/menukit.css" rel="stylesheet" />
    <script src="~/Content/menukit/menukit_m1.js"></script>
    <!-- Select2 -->
    <link href="~/Content/select2-4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/select2-bootstrap-1.3.0/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Line-Awesome -->
    <link href="~/Content/line-awesome-1.3.0/css/line-awesome.min.css" rel="stylesheet" />
    <!-- SwetAlert -->
    <link href="~/Content/sweetalert2-11.4.29/sweetalert2.min.css" rel="stylesheet" />
    <!-- JqueryUI -->
    <link href="~/Content/jquery-ui-1.13.1/jquery-ui.css" rel="stylesheet" />
    <!-- Site -->
    <link href="~/Content/site.css" rel="stylesheet" />

    @RenderSection("css", required: false)
</head>
<body class="d-flex flex-column h-100">
    <!-- Nav bar -->
    @Html.Partial("_NavPartial")
    <!-- Nav bar -->
    <!-- Body -->
    @RenderBody()
    <!-- Body -->

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Hospital Roosevelt @DateTime.Now.Year.</span>
        </div>
    </footer>
    <a href="#page-top" id="back-to-top" class="page-scroll" title="Back to top" style="display: none;"><i class="fas fa-arrow-alt-circle-up"></i></a>

    <!-- Jquery js -->
    <script src="~/Content/jquery-3.6.0/jquery-3.6.0.min.js"></script>
    <script src="~/Content/font-awesome/js/all.js"></script>
    <!-- Bootstrap js-->
    <script src="~/Content/bootstrap-5.1.3/js/bootstrap.bundle.min.js"></script>
    <!-- Jquery validation -->
    <script src="~/Content/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Content/jquery-validation-unobtrusive-3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/jquery.unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/jquery-validation-unobtrusive-3.2.12/jqeury.validate.unobtrusive.numericlessthan.js"></script>
    <!-- Toastr -->
    <script src="~/Content/toastr-2.1.3/toastr.min.js"></script>
    <!-- Aos -->
    <script src="~/Content/aos-2.3.1/aos.js"></script>
    <!-- Select2 -->
    <script src="~/Content/select2-4.0.13/js/select2.min.js"></script>
    <script src="~/Content/select2-4.0.13/js/i18n/es.js"></script>
    <!-- SwetAlert -->
    <script src="~/Content/sweetalert2-11.4.29/sweetalert2.min.js"></script>
    <!-- JqueryUI -->
    <script src="~/Content/jquery-ui-1.13.1/jquery-ui.js"></script>
    <script src="~/Content/jquery-ui-1.13.1/jquery.ui.autocomplete.scroll.js"></script>
    <!-- site -->
    <script src="~/Content/apphr/jshelper.js"></script>
    <script src="~/Content/moment-2.27.0/moment.min.js"></script>
    <script src="~/Content/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
