@model IEnumerable<Apphr.Application.Common.Models.ToastTemplate>
@if (Model != null)
{
    foreach (var _template in Model)
    {
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="@_template.Delay" data-autohide="@(_template.Autohide ? "true" : "false")">
            <div class="toast-header">
                @if (!string.IsNullOrEmpty(_template.Image))
                {
                    <img src="@_template.Image" class="rounded mr-2">
                }
                @if (!string.IsNullOrEmpty(_template.Title))
                {
                    <strong class="mr-auto">@Html.Raw(_template.Title)</strong>
                }
                @if (!string.IsNullOrEmpty(_template.Subtitle))
                {
                    <small class="text-muted">@Html.Raw(_template.Subtitle)</small>
                }
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="@Apphr.Resources.Strings.Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                @Html.Raw(_template.Message)
            </div>
        </div>
    }
}