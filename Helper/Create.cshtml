@model Apphr.Application.Destinos.DTOs.DestinoDTOCreate
@{
    ViewBag.Title = "Crear";
    ViewBag.Entidad = "Destino";
    ViewBag.Icon = "<i class=\"far fa-plus-square\"></i>";
    Layout = "~/Views/Shared/_AppLayout.cshtml";    
}
<div class="container-lg"></div>
<div class="container-lg">
    <!--BreadCrum-->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" data-aos="fade-left">
                <a class="" href="@Url.Action("Index","Home", new { Area = "" })" style="text-decoration:none">
                    <i class="fa fa-home" title="Inicio"></i>
                    <span>Inicio</span>
                </a>
            </li>
            <li class="breadcrumb-item" data-aos="fade-left">
                <a class="" href="@Url.Action("Index")" style="text-decoration:none">
                    <span>Indice</span>
                </a>
            </li>
            <li class="breadcrumb-item" data-aos="fade-left">
                <span>Crear</span>
            </li>
        </ol>
    </nav>
    <!--BreadCrum-->
    <!-- Form Title -->
    <h4>
        @ViewBag.Title @ViewBag.Entidad @Html.Raw(ViewBag.Icon)
    </h4>
    <hr />
    <!-- Form Title -->
    <!-- Formulario -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.DestinoId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(x => x.Codigo)
        @Html.EditorFor(x => x.Descripcion)
        @Html.EditorFor(x => x.JefeServicio)

        <!-- Botones Formulario -->
        <div class="col-12 mt-1">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Agregar <i class="fa fa-plus"></i></button>
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>
        <!-- Botones Formulario -->

    }
	<!-- Formulario -->
</div>